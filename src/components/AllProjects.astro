---
import oneImg from "@/images/projects/1.webp"
import twoImg from "@/images/projects/2.webp"
import threeImg from "@/images/projects/3.webp"
import fourImg from "@/images/projects/4.webp"
import fiveImg from "@/images/projects/5.webp"
import sixImg from "@/images/projects/6.webp"
import sevenImg from "@/images/projects/7.webp"
import eightImg from "@/images/projects/8.webp"
import nineImg from "@/images/projects/9.webp"

let arrImg = [oneImg, twoImg, threeImg, fourImg, fiveImg, sixImg, sevenImg, eightImg, nineImg]
---

<section>
  <div>
    {
      arrImg.map(img => (
        <img src={img.src} />
      ))
    }
  </div>
</section>

<style>
  section {
    width: 100%;
    height: auto;
  }
  div {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding: 0px 2rem;
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
    gap: 3rem;
  }
  img {
    width: 35rem;
    height: 30rem;

    border-radius: 10px;
    box-shadow: 10px 10px 5px #54545435;
    transition: 0.3s ease;

    &:hover,
    &:active {
      transform: scale(1.1);
    }
  }

  @media (width <= 630px) {
    img {
      width: 35rem;
      height: auto;
    }
  }
</style>