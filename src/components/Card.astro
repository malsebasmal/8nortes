---
interface Props {
	alt: string;
  route: string;
  link: string;
}

const { alt, route, link} = Astro.props
---
<a href={link}>
  <img src={route} alt={alt}>
</a>

<style>
  img {
    width: 100%;

    cursor: pointer;
    border-radius: 10px;
    box-shadow: 10px 10px 5px #54545435;
    transition: 0.3s ease;

    &:hover,
    &:active {
      transform: scale(1.1);
    }
  }
</style>
