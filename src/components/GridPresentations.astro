  <Card link="https://www.instagram.com/p/C1N50jVrLnl/?locale=uken1&hl=am-et&img_index=1" alt="Cine Piola" route={DiloImagenes.src}/>
</div>

<style>
  div { 
    width: 100%;
    height: auto;
    
    display: grid;
    grid-template-columns: repeat(3, 20rem);
    place-content: center;
    gap: 2.5rem;
  }

  @media (width <= 1024px) {
    div{
      grid-template-columns: repeat(2, 20rem);
    }
  }

  @media (width <= 700px) {
    div{
      grid-template-columns: repeat(2, 15rem);
    }
  }

  @media (width <= 500px) {
    div{
      grid-template-columns: repeat(1, 20rem);
    }
  }
</style>