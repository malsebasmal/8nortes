import TallerCollege from "@/images/presentations/3Card.webp";
import CinePiola from "@/images/presentations/4Card.webp";
import DiloImagenes from "@/images/presentations/5Card.webp";
import TonyFest from "@/images/presentations/6Card.webp";
---

<div>
  <Card link="https://www.instagram.com/p/C6pzbF7NPIi/?locale=uken1&hl=am-et&img_index=1" alt="Tony Fest" route={TonyFest.src}/>
  <Card link="https://www.instagram.com/p/C6HbgizPuWN/?locale=uken1&hl=am-et" alt="Exhibicion FotogrÃ¡fica" route={Exhibicion.src}/>
  <Card link="https://www.instagram.com/p/C5bgT1cx6BX/?locale=uken1&hl=am-et&img_index=1" alt="Corazon de Pollito" route={CorazonPollito.src}/>
  <Card link="https://www.instagram.com/p/C2it_WDLuH4/?locale=uken1&hl=am-et" alt="Taller de Collage" route={TallerCollege.src}/>
