---
import { Navbar } from 'astro-bootstrap'
import type { NavbarItemType } from "astro-bootstrap"

	const items: NavbarItemType[] =  [
		{ text: "Proyectos" , href: "#proyectos" },
		{ text: "Presentaciones" , href: "#presentaciones" },
		{ text: "Quienes somos" , href: "" }
	]
---

<Navbar class="navbar-expand-lg bg-primary navbar" data-bs-theme="dark">
  <div class="container-fluid navbar">
    <Navbar.Items {items} class="me-auto mb-2 mb-lg-0" />
  </div>
</Navbar>

<style>
  .navbar {
		/* background-color: aqua; */
		width: 100%;
		height: 5rem;
		position: fixed;
	}
</style>